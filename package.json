  "bugs": {
    "url": "https://github.com/bespoyasov/site/issues"
  },
  "homepage": "https://github.com/bespoyasov/site#readme",
  "dependencies": {
    "next": "^11.1.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@mavrin/remark-typograf": "^2.1.6",
