    "@typescript-eslint/parser": "^4.29.1",
    "eslint": "^7.32.0",
    "eslint-plugin-react": "^7.22.0",
    "feed": "^4.2.2",
    "gray-matter": "^4.0.3",
    "husky": "^7.0.1",
    "hygen": "^6.0.4",
    "jest": "^27.0.6",
    "jsdom": "^17.0.0",
    "lint-staged": "^11.1.2",
    "next-mdx-remote": "^3.0.4",
    "next-offline": "^5.0.3",
    "prettier": "^2.3.2",
    "rehype-autolink-headings": "^6.1.0",
    "rehype-highlight": "^5.0.0",
    "rehype-slug": "^5.0.0",
    "remark-unwrap-images": "^3.0.0",
    "stylelint": "^13.12.0",
